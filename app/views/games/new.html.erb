<h1>New game</h1>
<ul class="letters">
  <% @letters.each do |letter| %>
    <div>
      <li>
        <%= letter %>
      </li>
    </div>
    <% end %>
</ul>

<form class="form" action="/score" method="post">
  <label for="word">What is the longest word you can find?</label>
  <div>
    <input type="text" name="word" value="<%= params[:word] %>">
    <input type="submit">
  </div>
  <%= hidden_field_tag 'letters', @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
